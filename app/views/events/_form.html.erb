<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.hidden_field :user_id %>
  </div>
  <div class="field">
    <%= f.label 'Event Name' %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f. label :start_time %>
    <%= f.datetime_select 'start_time' %>
  </div>
  <div class="field">
    <%= f. label :end_time %>
    <%= f.datetime_select 'end_time' %>
  </div>
    <div class="field">
    <%= f.label 'Event Location' %>
    <%= f.text_field :location %>
  </div>
  <%= f.fields_for :address do |address_form| %>
    <div class="field">
      <%= address_form.label 'Street 1' %>
      <%= address_form.text_field :street1 %>
    </div>
    <div class="field">
      <%= address_form.label 'Street 2' %>
      <%= address_form.text_field :street2 %>
    </div>
    <div class="field">
      <%= address_form.label :city %>
      <%= address_form.text_field :city %>
    </div>
    <div class="field">
      <%= address_form.label :state %>
      <%= address_form.text_field :state %>
    </div>
    <div class="field">
      <%= address_form.label :zip_code %>
      <%= address_form.text_field :zip_code %>
    </div>
    <div class="field">
      <%= address_form.label :country %>
      <%= address_form.text_field :country %>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :notes %>
    <%= f.text_area :notes %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
